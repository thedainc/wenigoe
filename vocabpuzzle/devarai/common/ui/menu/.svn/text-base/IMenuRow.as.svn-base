package devarai.common.ui.menu {
	
	import devarai.common.ui.IContentElement;
	
	public interface IMenuRow {
		
		/**
		 * @return The width of the content in pixels.
		 */		
		function get myWidth():Number;
		/**
		 * @return The content of this row
		 */
		function get content():String;

		/**
		 * @return The saved in this cell.
		 */
		function get theContent():IContentElement;
		/**
		 * Highlights the cell.
		 */
		function set lightMarker(v:Boolean);
		/**
		 * Highlights the cell.
		 */
		function set redMarker(v:Boolean);
		
		function get redMarker():Boolean;
		
		/**
		 * Is the the line/element activated. Someone clicked on it the first time?
		 */
		function get activated():Boolean;




		
	}
	
}